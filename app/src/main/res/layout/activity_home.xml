<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_home"
                android:textColor="@color/colorPrimary"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_trip_date"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:drawableStart="@drawable/calendar"
                android:drawablePadding="12dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical|start"
                android:paddingStart="14dp"
                android:paddingTop="14dp"
                android:paddingEnd="14dp"
                android:paddingBottom="14dp"
                android:text="When is your Trip?"
                android:textAllCaps="false"
                android:textColor="#101010"
                android:textSize="16sp"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/tv_current_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Current Location"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Location Display Box with Edit Button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_location_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/iv_location_icon_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    app:tint="@color/textPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="Location Icon"/>

                <TextView
                    android:id="@+id/tv_location_city2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Tap to get current location"
                    android:text="Tap to get current location"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/iv_location_icon_home"
                    app:layout_constraintEnd_toStartOf="@+id/ib_edit_location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/ib_edit_location"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/edit"
                    app:tint="@color/colorPrimary"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- This TextView was part of MapsActivity, adding it here for consistency if needed for debug -->
            <TextView
                android:id="@+id/tv_direction_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/textSecondary"
                tools:text="Location status will show here"/>


            <TextView
                android:id="@+id/tv_spots_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tourist and Food Spots Near You"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Spot List Area -->
            <!-- Item 1: Burnham Park -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_burnham_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/lightGrayBackground">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_spot1"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:contentDescription="Spot Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/burnham"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tv_spot_name1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Burnham Park"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/iv_spot1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_spot_distance1"/>
                    <ImageView
                        android:id="@+id/iv_star1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/star"
                        app:tint="@color/starColor"
                        app:layout_constraintStart_toStartOf="@id/tv_spot_name1"
                        app:layout_constraintTop_toBottomOf="@id/tv_spot_name1"
                        android:contentDescription="Rating Star"/>
                    <TextView
                        android:id="@+id/tv_spot_rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.4"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_star1"
                        app:layout_constraintStart_toEndOf="@id/iv_star1"
                        app:layout_constraintTop_toTopOf="@id/iv_star1" />
                    <TextView
                        android:id="@+id/tv_spot_reviews1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(31K)"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_rating1"
                        app:layout_constraintStart_toEndOf="@id/tv_spot_rating1"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_rating1" />
                    <TextView
                        android:id="@+id/tv_spot_distance1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="0.5 km"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_name1"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_name1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 2: Mines View -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/lightGrayBackground">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_spot2"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mines"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Spot Image"/>
                    <TextView
                        android:id="@+id/tv_spot_name2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Mines View"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/iv_spot2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_spot_distance2"/>
                    <ImageView
                        android:id="@+id/iv_star2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/star"
                        app:tint="@color/starColor"
                        app:layout_constraintStart_toStartOf="@id/tv_spot_name2"
                        app:layout_constraintTop_toBottomOf="@id/tv_spot_name2"
                        android:contentDescription="Rating Star"/>
                    <TextView
                        android:id="@+id/tv_spot_rating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.3"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_star2"
                        app:layout_constraintStart_toEndOf="@id/iv_star2"
                        app:layout_constraintTop_toTopOf="@id/iv_star2" />
                    <TextView
                        android:id="@+id/tv_spot_reviews2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(13K)"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_rating2"
                        app:layout_constraintStart_toEndOf="@id/tv_spot_rating2"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_rating2" />
                    <TextView
                        android:id="@+id/tv_spot_distance2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="2.5 km"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_name2"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_name2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 3: Botanical Garden -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/lightGrayBackground">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_spot3"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/botanical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="Spot Image"/>
                    <TextView
                        android:id="@+id/tv_spot_name3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Botanical Garden"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/iv_spot3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_spot_distance3"/>
                    <ImageView
                        android:id="@+id/iv_star3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/star"
                        app:tint="@color/starColor"
                        app:layout_constraintStart_toStartOf="@id/tv_spot_name3"
                        app:layout_constraintTop_toBottomOf="@id/tv_spot_name3"
                        android:contentDescription="Rating Star"/>
                    <TextView
                        android:id="@+id/tv_spot_rating3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.4"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_star3"
                        app:layout_constraintStart_toEndOf="@id/iv_star3"
                        app:layout_constraintTop_toTopOf="@id/iv_star3" />
                    <TextView
                        android:id="@+id/tv_spot_reviews3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(7.6K)"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_rating3"
                        app:layout_constraintStart_toEndOf="@id/tv_spot_rating3"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_rating3" />
                    <TextView
                        android:id="@+id/tv_spot_distance3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="3.0 km"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_name3"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_name3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 4: Camp John Hay -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/lightGrayBackground">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_spot4"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:contentDescription="Spot Image"
                        android:src="@drawable/campjohn"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tv_spot_name4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Camp John Hay"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/tv_spot_distance4"
                        app:layout_constraintStart_toEndOf="@id/iv_spot4"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:id="@+id/iv_star4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/star"
                        android:contentDescription="Rating Star"
                        app:layout_constraintStart_toStartOf="@id/tv_spot_name4"
                        app:layout_constraintTop_toBottomOf="@id/tv_spot_name4"
                        app:tint="@color/starColor" />
                    <TextView
                        android:id="@+id/tv_spot_rating4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.7"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_star4"
                        app:layout_constraintStart_toEndOf="@id/iv_star4"
                        app:layout_constraintTop_toTopOf="@id/iv_star4" />
                    <TextView
                        android:id="@+id/tv_spot_reviews4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(63)"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_rating4"
                        app:layout_constraintStart_toEndOf="@id/tv_spot_rating4"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_rating4" />
                    <TextView
                        android:id="@+id/tv_spot_distance4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="1.0 km"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_spot_name4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_spot_name4" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>