<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.alayaapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlayaApp"
        tools:targetApi="33">
        <activity
            android:name=".ItineraryAdapter"
            android:exported="false" />
        <activity
            android:name=".ItineraryItem"
            android:exported="false" />
        <activity
            android:name=".ItinerariesActivity"
            android:exported="false" />
        <activity
            android:name=".OtpVerificationActivity"
            android:exported="false" /> <!-- Adjusted targetApi to a more common recent value like 33 or 34, change if needed -->
        <!-- Splash Activity is the ONLY LAUNCHER -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AlayaApp.SplashImitation"> <!-- Apply Splash Theme Here -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity - Not exported, launched internally -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- SignUp Activity - Not exported, launched internally -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false" /> <!-- Home Activity - Not exported, launched internally -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" /> <!-- MainActivity - REMOVED as LAUNCHER and set to not exported -->
        <!-- If you plan to DELETE MainActivity.java later, you can remove this block entirely -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>